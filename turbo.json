{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "dependsOn": ["@repo/db#db:generate"],
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "//#format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "format": {
      "dependsOn": ["^topo", "//#format"],
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "//#format:fix": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "format:fix": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "//#lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "lint": {
      "dependsOn": ["@repo/db#db:generate"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "//#lint:fix": {
      "dependsOn": ["@repo/db#db:generate"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "lint:fix": {
      "dependsOn": ["@repo/db#db:generate"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "generate"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"],
      "outputMode": "errors-only"
    },
    "spellcheck": {
      "inputs": ["**/*.mdx"]
    }
  }
}
