{
  "name": "monorepo-maestros",
  "version": "0.1.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "format": "turbo format format-root --continue -- --cache",
    "format-root": "prettier \"**/*.{ts,tsx,md,mdx,json}\" \"!apps/**\" \"!packages/**\" \"!tooling/**\" --check",
    "format:fix": "turbo format format-root --continue -- --write --cache",
    "clean": "find . -name node_modules -o -name .next -o -name dist -type d -prune | xargs rm -rf",
    "lint": "turbo lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint-staged": "lint-staged",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "eslint": "^8.41.0",
    "prettier": "^2.8.0",
    "prettier-plugin-packagejson": "^2.4.3",
    "turbo": "^1.10.12"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": "18"
  }
}
