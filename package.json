{
  "name": "monorepo-maestros",
  "version": "0.1.0",
  "scripts": {
    "build": "turbo build",
    "checks": "turbo format lint --continue",
    "checks:fix": "turbo format:fix lint:fix --continue",
    "clean": "find . -name node_modules -o -name .next -o -name dist -type d -prune | xargs rm -rf",
    "dev": "turbo dev",
    "format": "prettier . --check --cache --list-different --cache-location='node_modules/.cache/prettiercache'",
    "format:fix": "prettier . --write --cache --cache-location='node_modules/.cache/prettiercache'",
    "lint": "eslint . --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint:fix": "eslint . --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@vercel/style-guide": "^4.0.2",
    "eslint": "^8.41.0",
    "prettier": "^2.8.0",
    "prettier-plugin-packagejson": "^2.4.3",
    "turbo": "^1.10.12"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": "18"
  }
}
